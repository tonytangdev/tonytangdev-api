SKILLS_MODULE_ENABLED=true
EXPERIENCES_MODULE_ENABLED=true
EDUCATION_MODULE_ENABLED=true
PROJECTS_MODULE_ENABLED=true
PROFILE_MODULE_ENABLED=true
LANGUAGES_MODULE_ENABLED=true
REFACTORINGS_MODULE_ENABLED=true

# API Key for protected endpoints
API_KEY=your-secret-key-here

# Database Connections (default: both enabled)
# At least one must be enabled, or app will crash at startup
MONGODB_ENABLED=true
POSTGRESQL_ENABLED=true

# Database - PostgreSQL (required if POSTGRESQL_ENABLED=true)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tonytangdev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false

# Database - MongoDB (required if MONGODB_ENABLED=true)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=tonytangdev
MONGODB_PORT=27017

# Database Strategy (global default: typeorm, mongoose, or inmemory)
# Must match an enabled database (typeorm requires PostgreSQL, mongoose requires MongoDB)
DATABASE_STRATEGY=mongoose

# Per-module database strategy overrides (optional)
# SKILLS_DATABASE_STRATEGY=mongoose
# PROJECTS_DATABASE_STRATEGY=typeorm
# EXPERIENCES_DATABASE_STRATEGY=mongoose
# EDUCATION_DATABASE_STRATEGY=typeorm
# LANGUAGES_DATABASE_STRATEGY=mongoose
# PROFILE_DATABASE_STRATEGY=typeorm
# REFACTORINGS_DATABASE_STRATEGY=mongoose
